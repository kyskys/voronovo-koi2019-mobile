<resources>

    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="categoryItemStyle">@style/AppTheme.CategoriesStyle.ItemStyle</item>
    </style>

    <style name="AppTheme.CategoriesStyle"/>
    <style name="AppTheme.CategoriesStyle.ItemStyle">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
